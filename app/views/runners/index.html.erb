<h3>Listing runners</h3>

<table>
  <tr>
	<th>Mobile #</th>
    <th>Team ID</th>
	<th></th>
    <th></th>
    <th></th>
  </tr>

<% @runners.each do |runner| %>
  <tr class="<%= cycle("even", "odd") %>">
	<td>Runner <%= runner.id %> (<%= runner.mobile_number[-4..-1] %>)</td>
	<td><%= runner.current_team if runner.current_team %></td>
	<td><%= link_to 'Show', runner %></td>
    <td><%= link_to 'Edit', edit_runner_path(runner) %></td>
    <td><%= link_to 'X', runner, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

